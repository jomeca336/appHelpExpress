<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.task.CreateTaskActivity"
    android:padding="10dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goBackImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/go_back_ic"
                android:layout_marginStart="10dp"
                android:scaleType="fitCenter"
                android:layout_gravity="start"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publicar una tarea"
                android:layout_marginTop="30dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/titleEditText"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background_selector"
                    android:layout_marginTop="60dp"
                    android:padding="10dp"
                    android:hint="Título"

                    />

                <EditText
                    android:id="@+id/descriptionEditText"
                    android:layout_width="300dp"
                    android:layout_height="130dp"
                    android:background="@drawable/edit_text_background_selector"
                    android:layout_marginTop="20dp"

                    android:padding="10dp"
                    android:hint="Descripción"/>

                <Spinner
                    android:id="@+id/categorySpinner"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_background_selector"
                    />

                <EditText
                    android:id="@+id/locationEditText"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background_selector"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:hint="Ubicacion"
                    />

                <EditText
                    android:id="@+id/priceEditText"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background_selector"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:hint="¿Cuanto ofreces?"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Realiza pago en efectivo?"
                        android:layout_marginStart="85dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        />


                    <CheckBox
                        android:id="@+id/cashCheckBox"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center"
                        />



                </LinearLayout>

                <Button
                    android:id="@+id/createTaskButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publicar"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#4B0072"
                    />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>