<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/white" /> <!-- Color cuando está enfocado -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#673AB7"/> <!-- Borde -->
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/white" /> <!-- Color cuando no está enfocado -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#2196F3"/> <!-- Borde -->
        </shape>
    </item>
</selector>